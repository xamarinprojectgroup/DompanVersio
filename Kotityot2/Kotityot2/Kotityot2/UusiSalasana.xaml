<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kotityot2.UusiSalasana">
    <ContentPage.Content>
        <StackLayout Margin="1">
            <Label Text="Salasanan uusiminen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Käyttäjätunnus"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="TextFieldKauttaja" Text=""
                   VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                  WidthRequest="150" />
            <Button x:Name="btnLaheta" Text="Lähetä" 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>