<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kotityot2.Kirjaudu">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Käyttäjänimi"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="TextFieldKayttaja" Text=""
                   VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                  WidthRequest="150"/>
            <Label Text="Salasana"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="TextFieldSalasana" Text=""
                   VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                  WidthRequest="150" />
            <Button x:Name="btnKirjaudusisään" Text="Kirjaudu sisään" 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>